<div class="container">
  <h1>Add a new dose</h1>
  <%= simple_form_for ([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.button :submit, :class => "btn btn-primary" %>
  <% end %>
  <div class="back-button">
    <%= link_to "back", cocktails_path, :class => "btn btn-primary" %>
  </div>
</div>
